<h1>Books</h1>

<table class = "noborder">
    <thead>
        <tr>
            <th class = "noborder">Title</th>
            <th class = "noborder">Body</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td class = "noborder"><%= book.title %></td>
                <td class = "noborder"><%= book.body %></td>
                <td class = "noborder"><%= link_to "Show", book_path(book) %></td>
                <td class = "noborder"><%= link_to "Edit", edit_book_path(book) %></td>
                <td class = "noborder"><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: "Are you sure?" }%></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>個のエラーがあります<br>
    <% @book.errors.full_messages.each do |msg| %>
      <%= msg %><br>
      error<br>
    <% end %>
  <% end %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>