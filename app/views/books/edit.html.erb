<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
    <%= @book.errors.count %>個のエラーがあります<br>
    <% @book.errors.full_messages.each do |msg| %>
      <%= msg %><br>
      error<br>
    <% end %>
  <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
<% end %>
